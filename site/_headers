# Cloudflare Pages CDN Headers

# Images - aggressive caching (1 year, immutable since filenames contain hashes)
/images/*
  Cache-Control: public, max-age=31536000, immutable
  
# JS files - aggressive caching (contain hashes in filenames)
/images/js/*
  Cache-Control: public, max-age=31536000, immutable

# CSS files - aggressive caching
/images/css/*
  Cache-Control: public, max-age=31536000, immutable

# HTML pages - short cache, revalidate
/*.html
  Cache-Control: public, max-age=3600, must-revalidate

# Homepage
/
  Cache-Control: public, max-age=3600, must-revalidate

# API routes - no cache
/api/*
  Cache-Control: no-store
/* Force full re-upload */
# Force cache invalidation: 1769700055
